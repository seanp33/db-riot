<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<context:annotation-config />

	<bean id="dbRiot" class="dbriot.DbRiot" init-method="init" destroy-method="destroy">
		<property name="disasterScenario" ref="disasterScenario" />
		<property name="recoveryStrategy" ref="googleDiffRecoveryStrategy" />
	</bean>
	
	<bean id="dbWorld" class="dbriot.database.DbWorld" init-method="init" >
		<property name="count" value="10"></property>
	</bean>
	
	<bean id="disasterScenario" class="dbriot.disaster.SevereDisasterScenario"></bean>
	<bean id="recoveryStrategy" class="dbriot.recovery.GoogleDiffRecoveryStrategy"></bean>
	
	<bean id="googleDiffRecoveryStrategy" class="dbriot.recovery.GoogleDiffRecoveryStrategy"></bean>
	<bean id="gitRecoveryStrategy" class="dbriot.recovery.GitRecoveryStrategy"></bean>
	
	<bean id="recoveryService" class="dbriot.services.RecoveryServiceImpl"></bean>
</beans>
